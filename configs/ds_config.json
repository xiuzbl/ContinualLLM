{
    "bf16": {
        "enabled": true
    },
    "zero_optimization": {
        "stage": 2,
        "allgather_bucket_size": 5e8,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 5e8,
        "contiguous_gradients": true,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        }
    },
    "optimizer": {
       "type": "AdamW",
       "params": {
         "lr": 2e-5,
         "betas": [0.8, 0.999],
         "eps": 1e-8,
         "weight_decay": 0.0
       }
    },
    "scheduler": {
      "type": "WarmupDecayLR",
      "params": {
          "warmup_min_lr": 1e-6,
          "warmup_max_lr": 2e-5,
          "warmup_num_steps": 10,
          "total_num_steps": 1000
      }
    },
    "zero_allow_untested_optimizer": true,
    "zero_force_ds_cpu_optimizer": false,
    "gradient_accumulation_steps": 8,
    "gradient_clipping":1.0, 
    "steps_per_print": 8,
    "train_micro_batch_size_per_gpu": 2,
    "wall_clock_breakdown": false
}